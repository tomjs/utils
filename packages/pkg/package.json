{
  "name": "@tomjs/pkg",
  "version": "1.0.3",
  "description": "npm package tools",
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "package",
    "pkg",
    "npm",
    "yarn",
    "pnpm"
  ],
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "import": {
        "default": "./dist/index.mjs",
        "types": "./dist/index.d.mts"
      }
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@tomjs/node": "^2.2.0",
    "semver": "^7.6.2",
    "type-fest": "^4.20.1"
  },
  "devDependencies": {
    "@types/semver": "^7.5.8"
  }
}
